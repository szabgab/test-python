#!/bin/bash
pwd
echo shell $SHELL
echo WORKSPACE $WORKSPACE

rm -rf venv2
virtualenv venv2 -p python
source venv2/bin/activate
pip install pytest
echo "Start Testing"
py.test code/ --junitxml=test_results/$BUILD_NUMBER.xml


